---
import SettingModal from "./SettingModal.astro";

interface Props {
  isDrop: boolean;
}

const { isDrop } = Astro.props;
---

<div class="container mx-auto flex flex-col gap-2 p-2">
  <div class="flex flex-row items-center justify-center">
    <div class="flex-1">
      <a href="/">
        <h1 class="text-2xl font-bold">
          ZeroHub<span class="text-primary">{isDrop ? "Drop" : "Share"}</span>
        </h1>
      </a>
    </div>
    <div class="flex-none">
      <SettingModal />
    </div>
  </div>
</div>
